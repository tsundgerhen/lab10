            </intent-filter>
        </activity>

        <!-- Book List Activity -->
        <activity android:name=".BookListActivity" />

        <!-- Book Detail Activity -->
        <activity android:name=".BookDetailActivity" />
        <!-- Register Activity -->
        <activity android:name=".RegisterActivity" />

        <!-- Main Activity -->
        <activity android:name=".MainActivity" />

    </application>


</manifest>